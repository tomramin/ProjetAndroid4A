<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tom.r.projetandroid4a.Controller.DetailActivity"
    android:background="#303030">

    <android.support.design.widget.AppBarLayout
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/appbarlayout_id">

        <android.support.design.widget.CollapsingToolbarLayout
            android:background="@color/blanc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/collapsingtoolbar_id"
            app:layout_scrollFlags="exitUntilCollapsed|scroll"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp"
            >

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                android:theme="@style/ThemeOverlay.AppCompat.Light">
            </android.support.v7.widget.Toolbar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/p_image_dofus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/loading_shape" />

            </LinearLayout>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:background="@color/blanc">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grisFoncé">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/vert">

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Informations:"
                        android:textColor="@color/blanc"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"/>
                </RelativeLayout>

                <TextView
                    android:layout_marginLeft="5dp"
                    android:paddingTop="55dp"
                    android:id="@+id/id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID:"
                    android:textStyle="bold"

                    android:textColor="@color/blanc"
                    android:textSize="18sp"/>

                <TextView
                    android:paddingTop="55dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/p_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/id"
                    android:text="Id"
                    android:textColor="@color/blanc"
                    android:textSize="18sp" />

                <TextView
                    android:paddingTop="90dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/genre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Genre:"
                    android:textColor="@color/blanc"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

                <TextView
                    android:paddingTop="85dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/p_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/genre"
                    android:textColor="@color/blanc"
                    android:text="Genre"
                    android:textSize="18sp" />

                <TextView
                    android:paddingTop="85dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/name"
                    android:paddingLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/p_gender"
                    android:text="NAME:"
                    android:textColor="@color/blanc"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    />

                <TextView
                    android:paddingTop="85dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/p_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerVertical="true"
                    android:textColor="@color/blanc"
                    android:layout_toRightOf="@+id/name"
                    android:text="Name"
                    android:textSize="18sp" />

                <TextView
                    android:paddingTop="85dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/classe"
                    android:paddingLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerVertical="true"
                    android:textColor="@color/blanc"
                    android:layout_toRightOf="@+id/p_name"
                    android:text="Classe:"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    />

                <TextView
                    android:paddingTop="85dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/p_classe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/classe"
                    android:textColor="@color/blanc"
                    android:text="Classe"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:background="@color/grisFoncé">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:paddingTop="5dp"
                        android:id="@+id/sorts"
                        android:paddingLeft="5dp"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:text="Sorts:"
                        android:textColor="@color/blanc"
                        android:textStyle="bold"
                        android:background="@color/vert"
                        android:paddingBottom="5dp"></TextView>

                </RelativeLayout>

                <TextView
                    android:layout_marginTop="35dp"
                    android:id="@+id/p_sorts"
                    android:paddingLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sorts"
                    android:textColor="@color/blanc"
                    android:layout_marginBottom="10dp"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:background="@color/grisFoncé">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/vert">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="Description:"
                        android:textColor="@color/blanc"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/p_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingTop="40dp"
                    android:text="Description"
                    android:textColor="@color/blanc"
                    android:textSize="25dp" />
            </RelativeLayout>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
